{
  "name": "@bcgov/webpack-wordpress",
  "version": "1.0.0",
  "author": "Bcgov Wordpress <govwordpress@gov.bc.ca>",
  "repository": {
    "type": "git",
    "url": "https://apps.itsm.gov.bc.ca/bitbucket/scm/wp/bcgov-webpack-wordpress.git"
  },
  "bugs": {
    "url": "https://apps.itsm.gov.bc.ca/jira/browse/WD-1180"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "scripts": {
    "build": "webpack --env.development --progress --config ./webpack/webpack.js  --colors",
    "build:production": "webpack --progress --config ./webpack/webpack.js  --colors",
    "start": "webpack --env.development --progress --watch --config ./webpack/webpack.js  --colors",
    "test": "jest --coverage"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "browserslist": [
    "> 1.5%",
    "ie >= 11",
    "edge >= 17"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": "3.0.0",
          "targets": {
            "esmodules": true,
            "ie": "11"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-classes": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@types/node": "^13.7.4",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.2.1",
    "file-loader": "^4.3.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.8.2",
    "node-sass": "^4.13.1",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "url-loader": "^2.3.0",
    "webpack": "^4.42.0",
    "webpack-assets-manifest": "^3.1.1",
    "webpack-cli": "^3.3.9",
    "webpack-merge": "^4.2.2",
    "write-file-webpack-plugin": "^4.5.1"
